---
const features = [
  {
    title: "Create Lists Together",
    description: "Collaborate with roommates to create and manage shared grocery lists in real-time."
  },
  {
    title: "Smart Organization",
    description: "Organize items by categories and create recurring shopping lists for regular purchases."
  },
  {
    title: "Shopping History",
    description: "Keep track of previous purchases and frequently bought items for better planning."
  }
];
---
<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-8">Features</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>